<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        <span>{{restaurant.category}}</span>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        <span>{{restaurant.location}}</span>
        {{#if restaurant.google_map}}
          <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        {{/if}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        <span>{{restaurant.phone}}</span>
      </p>
      <p class="mt-3 mb-5">
        {{restaurant.description}}
      </p>

      {{#if restaurant.image}}
      <img class="restaurant-img rounded mx-auto d-block mb-4" src="{{restaurant.image}}" alt="{{restaurant.name}}">
      {{else}}
      <img class="restaurant-img rounded mx-auto d-block mb-4" src="/img/default_img.png" alt="{{restaurant.name}}">
      {{/if}}

      <div class="text-center">
        <a href="/restaurants/{{restaurant.id}}/edit" class="btn btn-primary">編輯</a>
        <a href="#" class="btn btn-primary">刪除</a>
      </div>
    </div>
  </div>
</div>