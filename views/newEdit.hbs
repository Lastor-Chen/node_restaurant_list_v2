{{!-- new / edit 共用頁面 --}}
<div class="container my-5">
  <div class="w-75 mx-auto">
    <div class="card">
      <div class="card-body">
        {{#if new}}
        <form action="/restaurants/new" method="POST">
        {{else}}
        <form action="/restaurants/{{restaurant.id}}/edit?_method=PUT" method="POST">
        {{/if}}
          {{!-- 兩欄區 --}}
          <div class="form-row">
            <div class="form-group col-6">
              <label for="name">餐廳名稱 <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="name" name="name" value="{{restaurant.name}}" placeholder="餐廳名稱"
                required>
            </div>
            <div class="form-group col-6">
              <label for="category">類別</label>
              <input type="text" class="form-control" id="category" name="category" value="{{restaurant.category}}"
                placeholder="義式料理、日本料理...">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-6">
              <label for="rating">評價</label>
              <input type="number" class="form-control" id="rating" name="rating" value="{{restaurant.rating}}"
                placeholder="數字 0~5" min="0" max="5" step="0.1">
            </div>
            <div class="form-group col-6">
              <label for="phone">電話</label>
              <input type="tel" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}"
                placeholder="02 1234 5678" pattern="[0-9]{2}\s[0-9]{4}\s[0-9]{4}">
            </div>
          </div>

          {{!-- 單攔區 --}}
          <div class="form-group">
            <label for="image">圖片連結</label>
            <input type="url" class="form-control" id="image" name="image" value="{{restaurant.image}}"
              placeholder="http://sample.jpg">
          </div>
          <div class="form-group">
            <label for="location">地址</label>
            <input type="text" class="form-control" id="location" name="location" value="{{restaurant.location}}"
              placeholder="台北市松山區...">
          </div>
          <div class="form-group">
            <label for="google_map">Google Map資訊</label>
            <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}"
              placeholder="https://goo.gl/maps/...">
          </div>

          {{!-- 描述 textarea --}}
          <div class="form-group">
            <label for="description">餐廳介紹</label>
            <textarea class="form-control" name="description" id="description" rows="6"
              placeholder="描述...">{{restaurant.description}}</textarea>
          </div>

          {{!-- 按鈕群 --}}
          <div class="text-center">
            <button type="submit" class="btn btn-primary">完成</button>
            {{#if new}}
            <a href="/index" class="btn btn-outline-secondary">取消</a>
            {{else}}
            <a href="/restaurants/{{restaurant.id}}" class="btn btn-outline-secondary">取消</a>
            {{/if}}
          </div>
        </form>

      </div>
    </div>
  </div>
</div>