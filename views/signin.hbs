<div class="container mt-5">
  <div class="row">
    <div class="col-8 col-md-6 col-lg-5 mx-auto">

      {{> alert}}

      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Sign In</h2>
          <form action="/users/signin" method="POST">
            <div class="form-group">
              <label for="email">Email 帳號</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="sample@gmail.com">
            </div>
            <div class="form-group">
              <label for="password">Password 密碼</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="your password">
            </div>
            <button type="submit" class="btn btn-primary btn-block">登入</button>
          </form>
          <a href="/OAuth/facebook" class="btn btn-primary btn-block mt-3">使用 Facebook 繼續</a>
          <div class="mt-4">
            <span>No Account?</span>
            <a href="/users/signup">Sign Up</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
